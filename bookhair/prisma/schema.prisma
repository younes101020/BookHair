generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  providerAccountId String
  userId            String
  access_token      String?
  expires_at        Int?
  id_token          String?
  provider          String
  refresh_token     String?
  scope             String?
  session_state     String?
  token_type        String?
  type              String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  expires      DateTime
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String        @id @default(cuid())
  email         String?       @unique
  role          Role          @default(USER)
  emailVerified DateTime?
  image         String?
  lastname      String?
  name          String?
  password      String?
  phone         String?
  accounts      Account[]
  commentaires  Commentaire[]
  reservations  Reservation[]
  sessions      Session[]

  @@map("Client")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Coiffeur {
  id                String           @id @default(uuid())
  nom               String
  email             String           @unique
  mot_de_passe      String?
  numero_telephone  String           @unique
  adresse           String
  date_creation     DateTime         @default(now())
  date_modification DateTime?        @updatedAt
  role              Role             @default(USER)
  commentaires      Commentaire[]
  servicedetails    ServiceDetails[]
}

model Service {
  id                String           @id @default(uuid())
  nom               String
  description       String
  duree             Int
  date_creation     DateTime         @default(now())
  date_modification DateTime?        @updatedAt
  servicedetails    ServiceDetails[]
}

model ServiceDetails {
  id                String        @id @default(uuid())
  prix              Float
  coiffeur_id       String
  service_id        String
  coupe_id          String
  date_creation     DateTime      @default(now())
  date_modification DateTime?     @updatedAt
  reservations      Reservation[]
  coiffeur          Coiffeur      @relation(fields: [coiffeur_id], references: [id])
  service           Service       @relation(fields: [service_id], references: [id])
  coupe             Coupe         @relation(fields: [coupe_id], references: [id])
}

model Coupe {
  id             String         @id @default(uuid())
  categorie      Categorie
  name           String
  sdId           String         @unique
  servicedetails ServiceDetails @relation(fields: [sdId], references: [id])
}

model Reservation {
  id                 String         @id @default(uuid())
  date_reserv        DateTime
  service_details_id String
  date_creation      DateTime       @default(now())
  date_modification  DateTime?      @updatedAt
  user_id            String
  serviceDetails     ServiceDetails @relation(fields: [service_details_id], references: [id])
  user               User           @relation(fields: [user_id], references: [id])
}

model Commentaire {
  id                String    @id @default(uuid())
  commentaire       String
  note              Int
  date_com          DateTime
  coiffeur_id       String
  date_creation     DateTime  @default(now())
  date_modification DateTime? @updatedAt
  user_id           String
  coiffeur          Coiffeur  @relation(fields: [coiffeur_id], references: [id])
  client            User      @relation(fields: [user_id], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Categorie {
  CHEVEUX
  BARBE
  VISAGE
}
